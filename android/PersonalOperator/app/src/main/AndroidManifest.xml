<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ── Permissions ── -->

    <!-- Notifications (read WhatsApp/Telegram) -->
    <uses-permission android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
        tools:ignore="ProtectedPermissions" />

    <!-- Overlay (floating bubble + confirmation panel) -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- Calling -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- Audio for VoIP -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <!-- Network -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Foreground service -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Contacts (to resolve names) -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- Wake lock (keep WebSocket alive) -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Vibration for confirmations -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".OperatorApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="Personal Operator"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PersonalOperator"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="34">

        <!-- ── Main Activity ── -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.PersonalOperator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ── Notification Listener Service ── -->
        <service
            android:name=".service.NotificationListener"
            android:exported="false"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

        <!-- ── Foreground Service ── -->
        <service
            android:name=".service.OperatorForegroundService"
            android:exported="false"
            android:foregroundServiceType="specialUse" />

        <!-- ── Call Service ── -->
        <service
            android:name=".service.CallService"
            android:exported="false" />

    </application>
</manifest>
